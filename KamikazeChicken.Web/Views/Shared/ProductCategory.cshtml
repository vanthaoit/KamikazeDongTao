@model IEnumerable<KamikazeChicken.Web.Models.ProductCategoryViewModel>
<div class="sub-cate">
    <div class="top-nav rsidebar span_1_of_left">
        <h3 class="cate">CATEGORIES</h3>
        <ul class="menu">
            @foreach (var productCategory in Model.Where(x => x.ParentID == null))
            {
                var Url  = "/"+productCategory.Alias + ".pc-"+productCategory.ID+".html";
                var childProductCategories = Model.Where(x=>x.ParentID == productCategory.ID);
                <li class="item1">
                    
                    <a href="@Url">@productCategory.Name
                        @if (childProductCategories.Count() > 0)
                        {
                        <img class="arrow-img" src="/Assets/client/images/arrow1.png" alt="" />
                        }
                    </a>
                    @if (childProductCategories.Count() > 0)
                    {
                        <ul class="cute">
                            @foreach (var childProductCategory in childProductCategories)
                            {
                                var childUrl = "/" + childProductCategory.Alias + ".pc-" + childProductCategory.ID + ".html";
                                <li class="subitem1"><a href="@childUrl">@childProductCategory.Name</a></li>

                            }

                        </ul>
                    }
                </li>
            }
      
          
        </ul>
